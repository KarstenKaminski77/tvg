{% extends 'Admin/layout.html.twig' %}
{% block meta_decription %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row border-bottom">
        <div class="col-12 text-truncate mt-1 pt-3 pb-3 ps-4">
            <h4 class="text-truncate">Communication Methods</h4>
        </div>
    </div>
    <div class="row pb-3 pt-2 pt-sm-3 bg-light border-left border-right">
        <div class="row pb-3 border-bottom">
            <div class="col-1 fw-bold ps-4 text-truncate">
                #ID
            </div>
            <div class="col-6 fw-bold text-truncate">
                Communication Method
            </div>
            <div class="col-2 fw-bold text-truncate">
                Modified
            </div>
            <div class="col-2 fw-bold text-truncate">
                Created
            </div>
        </div>
        {% for communicationMethod in communicationMethods %}
        <div class="row py-3 border-bottom-dashed" id="row_{{ communicationMethod.id }}">
            <div class="col-4 fw-bold ps-4 d-block d-md-none text-truncate">
                #ID
            </div>
            <div class="col-8 col-md-1 ps-4 text-truncate">
                #{{ communicationMethod.id }}
            </div>
            <div class="col-4 d-block d-md-none fw-bold text-truncate">
                Clinic Name
            </div>
            <div class="col-8 col-md-6 text-truncate">
                {{ communicationMethod.method }}
            </div>
            <div class="col-4 d-block d-md-none fw-bold text-truncate">
                Modified
            </div>
            <div class="col-8 col-md-2 text-truncate">
                {{ communicationMethod.modified|date('Y-m-d H:i:s') }}
            </div>
            <div class="col-4 d-block d-md-none fw-bold text-truncate">
                Created
            </div>
            <div class="col-8 col-md-2 text-truncate">
                {{ communicationMethod.created|date('Y-m-d') }}
            </div>
            <div class="col-12 col-md-1 text-truncate">
                <a
                    href="{{ path('communication_methods', {'communicationMethodId':communicationMethod.id} ) }}"
                    class="float-end open-user-modal"
                >
                    <i class="fa-solid fa-pen-to-square edit-icon"></i>
                </a>
            </div>
        </div>
        {% endfor %}
        {{ pagination|raw }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}